<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="applications-menu" label="Applications" execute="python2 ~/scripts/xdg-menu.py applications"/>
<menu id="preferences-menu" label="Preferences" execute="python2 ~/scripts/xdg-menu.py preferences"/>
<menu id="administration-menu" label="Administration" execute="python2 ~/scripts/xdg-menu.py system-settings"/>
<menu id="terminals-menu" label="Terminals" execute="python2 ~/scripts/xdg-menu.py terminals"/>

<menu id="root-menu" label="Openbox 3">
  <menu id="applications-menu"/>
  <menu id="preferences-menu"/>
  <menu id="administration-menu"/>
  <separator/>
  <menu id="terminals-menu"/>
  <separator/>
  <item label="Reconfigure">
    <action name="Reconfigure" />
  </item>
  <item label="Exit">
    <action name="Exit">
      <prompt>yes</prompt>
    </action>
  </item>
  <separator/>
  <item label="Log Out">
    <action name="SessionLogout">
      <prompt>yes</prompt>
    </action>
  </item>
</menu>

</openbox_menu>
